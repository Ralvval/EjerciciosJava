' Gambas class file

'ESTADO
Public resultado As Boolean
Public bAbierta As Boolean
Public clave As String

'COMPORTAMIENTO - METODOS

Public Sub _new()
  
  bAbierta = False
  clave = "0000"
  
End

Public Function changePassword(oldpassword As String, newPassword As String) As Boolean
  resultado = False
  If (oldpassword = clave) Then 
    clave = newPassword
    resultado = True
    Return resultado
    Else 
      Return resultado
  Endif 
End

Public Function open(password As String) As Boolean
  
  bAbierta = False
  If (clave = password) Then 
    bAbierta = True
    
   Endif 
   Return bAbierta
End 

Public Sub close()
  
  bAbierta = False
  
End

