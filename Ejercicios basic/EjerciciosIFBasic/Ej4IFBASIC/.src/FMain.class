' Gambas class file

Private nota1 As Float
Private nota2 As Float
Private nota3 As Float
Private notam As Float

Public Sub bCalcular_Click()
  nota1 = TBNota1.Text
  nota2 = TBNota2.Text
  nota3 = TBNota3.Text
  
  notam = (nota1 + nota2 + nota3) / 3
  
  If (nota1 >= 0 And nota1 <= 10 And nota2 >= 0 And nota2 <= 10 And nota3 >= 0 And nota3 <= 10) Then 
    If (notam >= 0 And notam < 5) Then 
      LFinal.Text = "Tu nota media es de " & notam & ", un insuficiente"
    Else If (notam >= 5 And notam < 6) Then 
      LFinal.text = "Tu nota media es de " & notam & ", un suficiente"
     Else If (notam >= 5 And notam < 7) Then 
      LFinal.text = "Tu nota media es de " & notam & ", un bien"
     Else If (notam >= 5 And notam < 8.5) Then 
      LFinal.text = "Tu nota media es de " & notam & ", un notable"
     Else If (notam >= 8.5 And notam <= 10) Then 
      LFinal.text = "Tu nota media es de " & notam & ", un sobresaliente"
    Endif 
  Else 
    LFinal.Text = "Por favor revisa los datos introducidos."
    Endif 
  
End

